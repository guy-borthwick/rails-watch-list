<div class="banner-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1517604931442-7e0c8ed2963c?auto=format&fit=crop&q=80&w=1470&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)">
  <h1><%= @list.name %></h1>
</div>

<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>


<div class="container mt-5">
  <div class="row">
    <div class="col-12 mb-3">
      <%= link_to 'Add New Bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
    </div>
    <% @bookmarks.each do |bookmark| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="bookmark-movie-image card-img-top" style="background-image: url('<%= bookmark.movie.poster_url %>');"></div>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text"><strong>Overview:</strong> <%= truncate(bookmark.movie.overview, length: 100) %></p>
            <p class="card-text"><strong>User Comment:</strong> <%= bookmark.comment %></p>
            <div class="mt-auto">
              <%= link_to 'Delete Bookmark',
                bookmark_path(bookmark),
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: 'btn btn-danger mt-2'
              %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
